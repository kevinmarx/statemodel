{
  "name": "viewstate",
  "description": "State tracking for Backbone Views",
  "version": "0.0.1",
  "keywords": [
    "state",
    "states",
    "state tracking",
    "view state",
    "state model",
    "not a fsm"
  ],
  "homepage": "http://github.com/kevinmarx/viewstate",
  "author": "Kevin Marx <kevindmarx@gmail.com.com> (http://github.com/kevinmarx)",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinmarx/viewstate.git"
  },
  "main": "index.js",
  "dependencies" : {
    "underscore" : "1.5.1",
    "backbone"   : "1.0.0"
  },
  "devDependencies": {
    "mocha": "*",
    "sinon": "*",
    "blanket": "*"
  },
  "scripts": {
    "test": "mocha --recursive -R spec",
    "coverage": "mocha --recursive --require blanket -R html-cov > coverage.html && open ./coverage.html",
    "blanket": {
      "pattern": "//^(?!.*node_modules.*$).*lib\//"
    }
  }
}
